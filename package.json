{
  "name": "aclu-emails",
  "version": "2.0.0",
  "description": "A collection of all the emails I have coded for the ACLU.",
  "main": ".eleventy.js",
  "author": "Pavel Sanchez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PaleBluDot/aclu-emails.git"
  },
  "scripts": {
    "start": "npm-run-all clean dev",
    "dev": "eleventy --serve",
    "clean": "rm -r dist",
    "format": "npx prettier --write dist",
    "spellcheck": "npx cspell \"src/**\"",
    "lint": "npm-run-all lint:*",
    "lint:email": "emailhint dist/test/**",
    "build": "cross-env env=production eleventy",
    "test": "echo Test successfully run âœ…"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "cspell": "^5.6.6",
    "dotenv": "^10.0.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "pa11y": "^5.3.0",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|md|css|html)": [
      "npm run test"
    ]
  }
}
