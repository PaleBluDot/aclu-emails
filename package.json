{
  "name": "aclu-emails",
  "version": "1.0.0-dev.3",
  "description": "A collection of all the emails I have coded for the ACLU.",
  "main": ".eleventy.js",
  "author": "Pavel Sanchez",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/PaleBluDot/aclu-emails",
  "scripts": {
    "start": "npm-run-all clean dev",
    "dev": "eleventy --serve",
    "clean": "rm -r dist",
    "format": "npx prettier --write dist",
    "spellcheck": "npx cspell \"src/**\"",
    "lint": "npm-run-all lint:*",
    "build": "cross-env env=production eleventy",
    "test": "echo Test successfully run âœ…",
    "commit": "git cz"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "commitizen": "^4.2.4",
    "commitlint": "^16.2.4",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "cspell": "^5.6.6",
    "cz-customizable": "^6.3.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "pa11y": "^5.3.0",
    "prettier": "2.2.1",
    "semantic-release": "^19.0.2",
    "stylelint": "^14.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit-msg": "exec < /dev/tty && node_modules/.bin/cz --hook || true",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|md|css|html)": [
      "npm run test"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "commitizen.config.js"
    }
  }
}
